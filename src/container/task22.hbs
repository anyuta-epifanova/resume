{{#with page_header}}
<h1 class="text-center">{{title}}</h1>
<p class="text-center text-uppercase">{{description}}</p>
{{/with}}

{{#with section}}
<div class="mt-4">

    {{#with about_us}}
    <div class="card mb-4">
        <div class="card-body">
            {{#with title_list}}
            <div class="display-6 text-end fw-normal mb-3">{{main}}</div>
            <h2 class="text-end">{{sub}}</h2>
            {{/with}}

            <button class="btn btn-outline-info">{{button.text}}</button>
        </div>
    </div>
    {{/with}}

    {{#with advantage}}
    <div class="card">
        <div class="card-body">
            <div class="text-muted display-5 mb-3">{{title}}</div>

            {{#with efficiency}}
            <div class="card mb-4">
                <div class="card-body">
                    <div class="display-4 text-muted">{{title}}</div>
                    <h6 class="my-4">{{sub_title}}</h6>
                    <p>{{description}}</p>
                    <button class="btn btn-outline-warning">{{button}}</button>
                </div>
            </div>
            {{/with}}

            {{#with innovation}}
            <div class="card mb-4">
                <div class="card-body">
                    <div class="display-4 text-muted text-center">{{title}}</div>
                    <h6 class="text-center my-4">{{sub_title}}</h6>
                    <p class="text-center">{{description}}</p>
                    <button class="btn btn-outline-warning">{{button}}</button>
                </div>
            </div>
            {{/with}}

            {{#with collaboration}}
            <div class="card">
                <div class="card-body">
                    <div class="display-4 text-muted text-end">{{title}}</div>
                    <h6 class="text-end my-4">{{sub_title}}</h6>
                    <p class="text-end">{{description}}</p>
                    <button class="btn btn-outline-warning">{{button}}</button>
                </div>
            </div>
            {{/with}}

        </div>
    </div>
    {{/with}}

    {{#with agreement}}
    <div class="card mt-4">
        <div class="card-body">
            <div class="display-5 mb-4">{{title}}</div>

            {{#with info}}
            <div class="card">
                <div class="card-body">
                    <h5 class="mb-4">{{sub_title}}</h5>

                    {{#with detail}}
                    <div class="card">
                        <div class="card-body">
                            <p class="mb-4">{{text}}</p>
                            <button class="btn btn-success">{{button}}</button>
                        </div>
                    </div>
                    {{/with}}
                </div>
            </div>
            {{/with}}
        </div>
    </div>
    {{/with}}

</div>
{{/with}}