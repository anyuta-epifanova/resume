<main class="row m-5">

    <section class="col-12">
        <div class="card mt-2 mb-5">
            {{#with navigation}}
            <div class="nav">
                {{#each links}}
                <div class="nav-item">
                    <a href="{{href}}" class="nav-link">{{text}}</a>
                </div>
                {{/each}}
                <a href="#" class="nav-link disabled">Disabled</a>
            </div>
            {{/with}}
        </div>
    </section>

    {{#with newsBlock}}
    <section class="col-12">
        <h4 class="text-center">{{title}}</h4>

        <div class="row">
            {{#each cards}}
            <div class="col-3 my-2 px-1">
                <div class="card text-bg-dark">
                    <div class="card-body">
                        <h6 class="card-title mb-3">
                            {{title}}

                            {{#if isNew}}
                            <span class="badge text-bg-success rounded-pill me-1">New</span>
                            {{/if}}
                            {{#if isTop}}
                            <span class="badge text-bg-danger rounded-pill">Top</span>
                            {{/if}}
                        </h6>
                        <p>{{description}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </section>
    {{/with}}

    <hr class="my-5">

    {{#with goodsBlock}}
    <section class="col-12">
        <div class="nav nav-tabs mb-4">
            {{#each tabs}}
            <div class="nav-item">
                <a href="#" class="nav-link 
                    {{#if isActive}} active {{/if}} 
                    {{#if isDisabled}} disabled {{/if}}">
                    {{text}}
                </a>
            </div>
            {{/each}}
        </div>

        <div class="row">
            {{#each cards}}
            <div class="col-4 mb-3">
                <div class="card">
                    <img src="{{image}}" class="card-img-top">
                    <div class="card-body">
                        <h5 class="card-title">{{title}}
                            {{#if isHot}} <span class="badge text-bg-warning text-light rounded-pill">HOT!</span>{{/if}}
                            {{#if isNew}} <span class="badge text-bg-primary rounded-pill">New</span> {{/if}}
                        </h5>
                        <p class="card-text">{{description}}</p>
                    </div>
                </div>
            </div>
            {{/each}}
        </div>
    </section>
    {{/with}}

    <hr class="my-5">

    {{#with subscribe}}
    <section class="col-12 mt-2 text-bg-dark">
        <h2 class="pt-2">{{header}}</h2>
        <p class="mt-3 mb-2">{{description}}</p>
        {{#each buttons}}
        <a href="{{link}}" class="btn btn-primary mb-2">{{text}}</a>
        <br>
        {{/each}}
    </section>
    {{/with}}

    <hr class="my-5">

    {{#with service}}
    <section class="col-12 mt-2 text-center text-bg-success">
        <h2 class="pt-2">{{title}}</h2>
        <p class="mt-3 mb-2">{{description}}</p>
        {{#each buttons}}
        <a href="{{link}}" class="btn btn-primary mb-2">{{text}}</a>
        {{/each}}
    </section>
    {{/with}}

</main>