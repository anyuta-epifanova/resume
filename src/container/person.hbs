{{#with person}}
<div>

    <div>
        <h1>{{name}}</h1>
        <p class="fs-3 mb-4"><strong>{{age}} y.o.</strong></p>
        <em>{{gender}}</em>
    </div>

    <hr class="my-4">

    {{#with address}}
    <div>
        <div>
            {{> title data="Address" big=true}}
        </div>

        <address>
            {{street}}, {{city}}, {{state}},
            <br>
            {{country}} {{zip}}
        </address>
    </div>
    {{/with}}

    <hr class="my-4">

    {{#with education.[0]}}
    <div>
        <div>
            {{> title data="Education" big=true}}
        </div>

        {{degree}} <br>
        {{major}} <br>
        <strong>{{university}}</strong>
        <br>
        {{graduationYear}}
    </div>
    {{/with}}

    <hr class="my-4">

    {{#with workExperience.[0]}}
    <div>
        <div>
            {{> title data="Work experience" big=true}}
        </div>

        <div>
            <b>{{company}}</b> | <em>{{title}}</em>
        </div>

        <div class="my-3">
            {{startDate}} to

            {{#if endDate}}
            {{endDate}}
            {{else}}
            (Present)
            {{/if}}
        </div>

        <div>
            Responsibilities:
            <ul>
                {{#each responsibilities}}
                <li>{{this}}</li>
                {{/each}}
            </ul>
        </div>

        <div class="my-3">Year founded: {{year_founded}}</div>

        <div class="mb-3">Industry: {{industry}}</div>


        <div>
            <b>Employees:</b>
            <ul>
                {{#each employees}}
                <li>
                    <div class="my-3"> <b>{{name}}</b> </div>

                    <div>{{position}} | {{department}}</div>

                    <div class="my-3">
                        <b>Projects:</b>
                        <ul>
                            {{#each projects}}
                            <li>
                                <div class="mb-3">
                                    {{name}}
                                    {{#if status}}
                                    <em>({{status}})</em>
                                    {{/if}}
                                </div>

                                <div class="mb-3"><em>{{description}}</em></div>


                                {{#with teams.[0]}}
                                <div>
                                    <div class="mb-4"><b>{{team_name}}</b></div>

                                    {{#with team_leader}}
                                    <div class="mb-3">
                                        — {{name}} -
                                        <b>{{title}}</b> |
                                        <email>({{email}})</email>
                                    </div>
                                    {{/with}}

                                    {{#with team_members.[0]}}
                                    <div>
                                        — {{name}} -
                                        <b>{{title}}</b> |
                                        <email>({{email}})</email>

                                        <div class="my-4">
                                            Skills:
                                            <ul>
                                                {{#each skills}}
                                                <li>{{this}}</li>
                                                {{/each}}
                                            </ul>
                                        </div>

                                        <div>
                                            <b>Projects:</b>

                                            <ul class="mt-4">
                                                {{#each projects}}
                                                <li>
                                                    <div>{{name}}</div>
                                                    <div class="mb-3"><em>{{description}}</em></div>

                                                    <div class="mb-3">
                                                        Technologies:
                                                        <ul>
                                                            {{#each technologies}}
                                                            <li>{{this}}</li>
                                                            {{/each}}
                                                        </ul>
                                                    </div>

                                                    <div>
                                                        Team members:
                                                        <ol>
                                                            {{#each team_members}}
                                                            <li>{{name}} - <b>{{title}}</b></li>
                                                            {{/each}}
                                                        </ol>
                                                    </div>
                                                </li>
                                                {{/each}}
                                            </ul>
                                        </div>
                                    </div>
                                    {{/with}}

                                </div>
                                {{/with}}
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                </li>
                {{/each}}
            </ul>
        </div>

    </div>
    {{/with}}

</div>
{{/with}}