{{#each goodsBlock}}
<div>
    <div class="card mb-3 p-2">
        <div class="row">
            <div class="col-2 py-4">
                <img src="{{image}}">
            </div>

            <div class="col-4">
                <div class="card-body">
                    <h5 class="card-title">{{name}}</h5>
                    <p class="card-text">{{description}}</p>
                </div>
            </div>

            {{#with price}}
            <div class="col-2">
                <div class="card-body my-4">
                    <p>{{title}}</p>
                    <b class="fs-5">{{value}}</b>
                </div>
            </div>
            {{/with}}

            <div class="col-2">
                <div class="card-body my-5">
                    <p>{{amount}}</p>
                </div>
            </div>

            <div class="col-2">
                {{#each buttons}}
                <div class="card-body my-2">
                    {{#if isPrimary}}
                    <button type="button" class="btn btn-primary">
                        {{text}}
                    </button>
                    {{else}}
                    <button type="button" class="btn btn-outline-danger">
                        {{text}}
                    </button>
                    {{/if}}
                </div>
                {{/each}}
            </div>
        </div>
    </div>
</div>
{{/each}}